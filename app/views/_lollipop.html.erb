<div class="chart-flex-container">
	<div class="chart">
		<div class="chart-elements">
			<%- data.each do |object| %>
			<div class="bar" style="width: <%= object[:width] %>%; background-color: <%= object[:color] %>;">
				<p class="bar-title"><%= object[:name] %></p>
				<div class="lollipop-end" style="background-color: <%= object[:color] %>;">
					<div class="tooltip">
						<p style="color: <%= object[:color] %>;"><%= object[:name] %></p>
						<p>$<%= object[:value] %></p>
					</div>
				</div>
			</div>
			<% end %>
		</div>
		<div class="gridlines">
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
			<div style="width: 10%;">
			</div>
		</div>
	</div>
	<div class="gridlines-ticks">
		<%- (1..10).each do |index| %>
			<div class="tick" style="width: 10%;">
				<p style="margin-right: 4px"><%= index * 120 %></p>
			</div>
		<% end %>
	</div>
	<div style="margin-left: 96px">
		<h4 style="text-align: center;"><%= axes[:horizontal] %> ($)</h4>
	</div>
</div>

<%= render :partial => '/styles' %>